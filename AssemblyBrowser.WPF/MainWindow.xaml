<Window x:Class="AssemblyBrowser.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AssemblyBrowser.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <DockPanel DockPanel.Dock="Top" Margin="10" Height="50">
            <Button DockPanel.Dock="Left" x:Name="btnOpenFile" Click="btnOpenFile_Click" Content="Open file"
                    Margin="10" Height="30" Width="80"/>
            <TextBox Name="txtEditor" VerticalContentAlignment="Center"
                    Margin="10" Height="30"/>
        </DockPanel>
        <TreeView x:Name="tvAssemblyInformation" Margin="20, 0, 20, 20"/>
    </DockPanel>
</Window>
